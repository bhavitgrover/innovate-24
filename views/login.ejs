<script>
    function isMobileDevice() {
        return window.innerWidth <= 800;
    }

    if (isMobileDevice()) {
        // console.log("hello");
        const phone = document.getElementById('phone')
        const image = document.getElementById('image')
        phone.style.width = '100vw'
        phone.style.height = '100vh'
        phone.style.borderRadius = '0'
        document.getElementById('up-time').style.display = 'none'
        image.style.borderRadius = '0'
        document.getElementById('mainForm').style.marginTop = '-5vh'
    }



    const error = document.getElementById('error').innerText;

    if (error) {
        console.log('yes')
        var notyf = new Notyf({
            position: {
                x: 'center',
                y: 'bottom',
            },
        });
        notyf.error(error);
    }
</script>
