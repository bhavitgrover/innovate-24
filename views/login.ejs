    <style>
        .up-time {
            width: 100%;
            position: absolute;
            top: 0;
            margin-left: -3.5vh;
        }

        .down-bar {
            width: 100%;
            position: absolute; 
            bottom: 0;
            margin-left: -3.5vh;
        }
        .heading {
            font-size: 2.3rem;
            letter-spacing: -1.395px;
            margin-bottom: 1vh;
            align-self: flex-start;
        }
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 2vh;
        }
        .input-container {
            width: 100%;
            background: rgba(0, 0, 0, 0.10);
            height: 6vh;
            border-radius: 100px;

            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start;
            gap: 3vh;

            padding-left: 3vh;
        }
        input {
            height: 80%;
            background: transparent;
            outline: none;
            border: none;
            width: 70%;
        }
        button {
            width: 100%;
            height: 6vh;
            outline: none;
            border: none;

            background: #01B764;

            color: white;
            border-radius: 100px;

            cursor: pointer;

            transition: all 300ms ease;
        }
        button:hover {
            background: rgba(0, 0, 0, 0.10);
            color: #000;
        }
        .account-p {
            color: rgba(0, 0, 0, 0.50);
            font-size: 12.443px;
            margin-top: -1.5vh;
            align-self: flex-start;
        }
        a {
            color: #006BFF;
            text-decoration: none;
            transition: all 200ms ease;
        }
        a:hover {
            color: #01B764;
        }
        .image {
            position: absolute;
            bottom: 0;
            margin-left: -3.5vh;
            width: 100%;
            border-radius: 0 0 56px 56px;
            height: 47vh;
            object-fit: cover;
            object-position: center top;
        }
    </style>
</head>
